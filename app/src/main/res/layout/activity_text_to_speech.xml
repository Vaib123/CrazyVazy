<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vaibhav.crazyvazy.TextToSpeech"
    android:background="@color/accent_material_dark">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENGLISH"
        android:id="@+id/english"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="109dp"
        android:textColor="#3125b8"
        android:textColorHighlight="#d82121"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:background="@drawable/roundbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        android:id="@+id/clearall"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#3125b8"
        android:textColorHighlight="#d82121"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:background="@drawable/roundbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FRENCH"
        android:id="@+id/french"
        android:layout_above="@+id/clearall"
        android:layout_centerHorizontal="true"
        android:textColor="#3125b8"
        android:textColorHighlight="#d82121"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:background="@drawable/roundbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/texttospee"
        android:layout_above="@+id/english"
        android:layout_centerHorizontal="true"
        android:textColor="#3125b8"
        android:textColorHighlight="#d82121"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:background="@drawable/roundbutton" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText13"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Enter the text"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textStyle="bold"
        android:textSize="20dp" />
</RelativeLayout>
